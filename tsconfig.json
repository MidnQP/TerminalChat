{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    },
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": [
    "./src/**/*",
    "./.bin/**/*"
  ],
  "typeAcquisition": {
    "enable": true
  }
}