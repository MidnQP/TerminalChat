{
    "git": {
        "commit": true,
        "commitMessage": "chore: release v${version}",
        "tag": true
    },
    "npm": {
        "publish": false
    },
    "github": {
        "release": true,
        "web": true
    },
    "plugins": {
        "@j-ulrich/release-it-regex-bumper": {
            "in": null,
            "out": {
                "file": "dist/bundle.cjs",
                "search": "globalThis.CLIENT_BUILD_VERSION",
                "replace": "\"{{version}}\""
            }
        }
    },
    "hooks": {
		"before:init":["npm run build", "npm run esbuild"],
		"after:release" :[ "npm run pkg", "echo Update server.js in Replit"]
	}
}
