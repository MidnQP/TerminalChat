{
	"name": "chatnet-socketio-client",
	"version": "2.0.1",
	"type": "module",
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"esbuild": "esbuild dist/client.js --outfile=dist/bundle.cjs --format=cjs --platform=node",
		"pkg": "pkg --no-bytecode --public --options no-warnings -t node18 ./dist/bundle.cjs -o ./dist/chatnet-sio-client",
		"bin": "npm run build && npm run esbuild && npm run pkg",
		"release": "release-it"
	},
	"dependencies": {
		"fs-extra": "^11.1.1",
		"lodash": "^4.17.21",
		"socket.io-client": "^4.6.1"
	},
	"devDependencies": {
		"@j-ulrich/release-it-regex-bumper": "^4.1.1",
		"@replit/database": "^2.0.3",
		"@types/express": "^4.17.17",
		"@types/fs-extra": "^11.0.1",
		"@types/lodash": "^4.14.194",
		"@types/node": "^18.15.13",
		"boxen-cli": "^4.0.0",
		"express": "^4.18.2",
		"release-it": "^15.10.1",
		"socket.io": "^4.6.1"
	}
}
